<div class="col-sm-2 col-md-1  sidebar hidden-sm-down">
    <div class="sidebar-heading clearfix">
        <div class="profile-image">
            <%= image_tag current_user.avatar_url(180), class: "gravatar" %>
        </div>
    </div>
    <div class="sidebar-nav">
        <div class="list-group top-links">
            <%= link_to root_path, :class => 'list-group-item' do %>
                <i class="fa fa-home" aria-hidden="true"></i><br><span> Home</span>
            <% end %>
            <a href="#" class="list-group-item" data-toggle="modal" data-target="#addItemModal"><i class="fa fa-plus" aria-hidden="true"></i><br><span> Add Task</span></a>
        </div>
        <div class="divider"></div>
        <div class="lower-links">
            <div class="list-group">
               <%= link_to edit_user_registration_path, :class => 'list-group-item' do %>
                  <i class="fa fa-user fa-fw" aria-hidden="true"></i><br><span> Account</span>
               <% end %>
               <%= link_to root_path, :class => 'list-group-item' do %>
                  <i class="fa fa-life-ring fa-fw" aria-hidden="true"></i><span> Help</span>
               <% end %>
               <%= link_to destroy_user_session_path, method: :delete, :class => 'list-group-item' do %>
                  <i class="fa fa-sign-out fa-fw" aria-hidden="true"></i><span> Sign Out</span>
               <% end %>
            </div>
        </div>
    </div>
</div>